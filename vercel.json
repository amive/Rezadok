{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.3"
    }
  },
  "routes": [
    { "src": "/index.php", "dest": "/api/index.php" },
    { "src": "/robots.txt", "dest": "/api/robots.txt" },
    { "src": "/Design/(.*)", "dest": "/public/Design/$1" },
    { "src": "/script/(.*)", "dest": "/public/script/$1" },
    { "src": "/assets/(.*)", "dest": "/public/assets/$1" },
    {
      "src": "/api/patient_dashboard.php",
      "dest": "/api/patient_dashboard.php"
    },
    { "src": "/api/doctor_dashboard.php", "dest": "/api/doctor_dashboard.php" }
  ]
}
